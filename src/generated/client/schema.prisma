generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Thread {
  id          Int     @id @default(autoincrement())
  brand       String
  colorNumber String
  colorName   String?
  quantity    Int
  status      String? // unused, used, low
  wishlist    Boolean
}

model Bead {
  id        Int     @id @default(autoincrement())
  brand     String
  itemCode  String
  size      String
  colorName String?
  quantity  Int
  status    String? // unused, used, low
  wishlist  Boolean
}

model CutCloth {
  id         Int     @id @default(autoincrement())
  fabricType String
  pattern    String
  size       String
  quantity   Int
  status     String? // unused, used
  wishlist   Boolean
}

model XStitchCloth {
  id       Int     @id @default(autoincrement())
  count    String
  color    String
  size     String
  quantity Int
  status   String? // unused, used
  wishlist Boolean
}
