generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Status enums: models differ in allowed values
enum StatusWithLow {
  unused
  used
  low
}

enum StatusBasic {
  unused
  used
}

model Thread {
  id           Int     @id @default(autoincrement())
  brand        String
  colorNumber  String
  colorName    String?
  quantity     Int
  status       StatusWithLow?
  wishlist     Boolean
}

model Bead {
  id         Int     @id @default(autoincrement())
  brand      String
  itemCode   String
  size       String
  colorName  String?
  quantity   Int
  status     StatusWithLow?
  wishlist   Boolean
}

model CutCloth {
  id          Int     @id @default(autoincrement())
  fabricType  String
  pattern     String
  size        String
  quantity    Int
  status      StatusBasic?
  wishlist    Boolean
}

model XStitchCloth {
  id        Int     @id @default(autoincrement())
  count     String
  color     String
  size      String
  quantity  Int
  status    StatusBasic?
  wishlist  Boolean
}
